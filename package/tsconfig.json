{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["es2017", "es7", "es6", "dom"],
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node"
    },
    "include": [
      "abis/",
      "abis/*.json",
      "types/",
      "index.ts"
    ],
    "exclude": [
      "node_modules",
      "dist/"
    ]
}